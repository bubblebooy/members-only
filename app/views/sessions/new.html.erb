<h1>Login</h1>


<%= form_for(:sessions, url: login_path) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :remember_me, class: "checkbox inline" do %>
    <%= f.check_box :remember_me%>
    <span>Remember me on this computer</span>
  <% end %>

  <%= f.submit "Login"%>
<% end %>
